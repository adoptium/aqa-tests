		<payload proportionOfAllocation="12.5%" size="1kB" lifespan="22s" />												
		<payload proportionOfAllocation="12.5%" size="1MB" lifespan="1h" />				
		<payload proportionOfAllocation="12.5%" size="1MB" lifespan="22s" />												
	</payloadSet>										
	<payloadSet startTime="20s">								
