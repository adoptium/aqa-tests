# javac *.java

SOURCE=$1

echo "------------ Pattern matching test ------------"

java SimpleGrep VWXYZ[\]@ABC ${SOURCE}
echo "--- Confirm that the line(s) includes "VWXYZ[\]@ABC". "
echo "--- Did you get the line(s) ?"
read word1

java SimpleGrep "V*X" ${SOURCE}
echo "--- Confirm that the line(s) includes the pattern "V*X". "
echo "--- Did you get the line(s) ?"
read word1

java SimpleGrep "^" ${SOURCE}
echo "--- Confirm that the line(s) starts with ""."
echo "--- Did you get the line(s) ?"
read word1

java SimpleGrep  ${SOURCE}
echo "--- Confirm that the line(s) includes "". "
echo "--- Did you get the line(s) ?"
read word1

java SimpleGrep "" ${SOURCE}
echo "--- Confirm that the line(s) includes "". "
echo "--- Did you get the line(s) ?"
read word1

java SimpleGrep "表d名" ${SOURCE}
echo "--- Confirm that the line(s) includes "表d名". "
echo "--- Did you get the line 33 ?"
read word1


echo ------------ Pattern replacement test ------------

java RegexReplaceTest VWXYZ[\]@ABC aiueo ${SOURCE} -v
echo "--- Confirm that "VWXYZ[\]@ABC" was replaced by "aiueo". "
echo "--- OK ?"
read word1

java RegexReplaceTest  J^Ji ${SOURCE} -v
echo "--- Confirm that "" was replaced by "J^Ji". "
echo "--- OK ?"
read word1

java RegexReplaceTest "" "\\\\" ${SOURCE} -v
echo "--- Confirm that "" was replaced by "\\". "
echo "--- OK ?"
read word1

java RegexReplaceTest "表d名" "" ${SOURCE} -v
echo "--- Confirm that "表d名" was replaced by "". "
echo "--- OK ?"
read word1

java RegexReplaceTest "\\\\u628e" "" ${SOURCE} -v
echo "--- Confirm that "\\u628e" was replaced by "". "
echo "--- OK ?"
read word1

java RegexReplaceTest [仝☆Ж] 号 ${SOURCE} -v
echo "--- Confirm that any of "仝☆Ж" were replaced by "号". "
echo "--- OK ?"
read word1
