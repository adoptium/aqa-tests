echo ------------ Pattern replacement test ------------

java RegexReplaceTest 　　　　　　　　　　　　 aiueo ${SOURCE} -v
echo "--- Confirm that "　　　　　　　　　　　　" was replaced by "aiueo". "
echo "--- OK ?"
read word1

java RegexReplaceTest 　 　　　　 ${SOURCE} -v
echo "--- Confirm that "　" was replaced by "　　　　". "
echo "--- OK ?"
read word1

java RegexReplaceTest "　" "\\\\" ${SOURCE} -v
