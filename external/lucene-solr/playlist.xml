<playlist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../TKG/playlist.xsd">
	<test>
		<testCaseName>MachineInfo</testCaseName>
		<command>$(JAVA_COMMAND) -cp $(JVM_TEST_ROOT)$(D)TKG$(D)bin$(D)TestKitGen.jar org.openj9.envInfo.EnvDetector MachineInfo; \
		$(TEST_STATUS)</command>
		<levels>
			<level>sanity</level>
			<level>extended</level>
			<level>special</level>
		</levels>
		<groups>
			<group>external</group>
		</groups>
	</test>
	<test>
		<testCaseName>lucene_solr_nightly_smoketest</testCaseName>
		<command> $(TEST_ROOT)$(D)external$(D)external.sh --run --tag ${DOCKERIMAGE_TAG} --version ${JDK_VERSION} --impl ${JDK_IMPL} --dir lucene-solr --reportdst $(REPORTDIR) --docker_args $(EXTRA_DOCKER_ARGS); \
		$(TEST_STATUS); \
		$(TEST_ROOT)$(D)external$(D)external.sh --clean --tag ${DOCKERIMAGE_TAG} --version ${JDK_VERSION} --impl ${JDK_IMPL} --dir lucene-solr
		</command>
		<levels>
			<level>extended</level>
		</levels>
		<groups>
			<group>external</group>
		</groups>
		<impls>
			<impl>hotspot</impl>
		</impls>
	</test>
	<test>
		<testCaseName>lucene_solr_nightly_smoketest_OpenJ9</testCaseName>
		<command> $(TEST_ROOT)$(D)external$(D)external.sh --run --tag ${DOCKERIMAGE_TAG} --version ${JDK_VERSION} --impl ${JDK_IMPL} --dir lucene-solr --reportdst $(REPORTDIR) --docker_args $(EXTRA_DOCKER_ARGS); \
		$(TEST_STATUS); \
		$(TEST_ROOT)$(D)external$(D)external.sh --clean --tag ${DOCKERIMAGE_TAG} --version ${JDK_VERSION} --impl ${JDK_IMPL} --dir lucene-solr
		</command>
		<levels>
			<level>extended</level>
		</levels>
		<groups>
			<group>external</group>
		</groups>
		<subsets>
			<subset>8</subset>
			<subset>10</subset>
		</subsets>
		<impls>
			<impl>openj9</impl>
		</impls>
	</test>
</playlist>
