<playlist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../TestConfig/playlist.xsd">
		<test>
		<testCaseName>IdleMicrobenchmark_HS</testCaseName>
		<variations>
			<variation>-Xmx1024m</variation>
		</variations>
		<command>mkdir -p $(REPORTDIR); \
	cd $(TEST_RESROOT); \
	$(JAVA_COMMAND) ${JVM_OPTIONS} \
	-cp $(Q)$(P)$(TEST_RESROOT)$(D)IdleMicrobenchmark.jar$(Q) net.adoptopenjdk.test.gc.idlemicrobenchmark.IdleMicroBenchmark \
	--memoryLimit=700 --time=60 --idletime=300 --warmup=1 >$(REPORTDIR)$(D)std.out 2>&1 ; \
	${TEST_STATUS}</command>
		<platformRequirements>os.linux,arch.x86,bits.64,^os.win</platformRequirements>
		<levels>
			<level>extended</level>
		</levels>
		<groups>
			<group>perf</group>
		</groups>
		<impls>
			<impl>hotspot</impl>
		</impls>
		<subsets>
			<subset>SE80</subset>
			<subset>SE90</subset>
			<subset>SE110</subset>
		</subsets>
	</test>
    <test>
		<testCaseName>IdleMicrobenchmark_J9</testCaseName>
		<variations>
			<variation>-XX:+IdleTuningGcOnIdle -Xtune:virtualized -XX:IdleTuningMinIdleWaitTime=120 -Xmx1024m</variation>
		</variations>
		<command>mkdir -p $(REPORTDIR); \
	cd $(TEST_RESROOT); \
	$(JAVA_COMMAND) ${JVM_OPTIONS} \
	-cp $(Q)$(P)$(TEST_RESROOT)$(D)IdleMicrobenchmark.jar$(Q) net.adoptopenjdk.test.gc.idlemicrobenchmark.IdleMicroBenchmark \
	--memoryLimit=700 --time=60 --idletime=300 --warmup=1 2>&1 >$(REPORTDIR)$(D)std.out & \
	chmod a+x runIdleTest.sh; \
	./runIdleTest.sh $(REPORTDIR); \
	${TEST_STATUS}</command>
		<platformRequirements>os.linux,arch.x86,bits.64,^os.win</platformRequirements>
		<levels>
			<level>extended</level>
		</levels>
		<groups>
			<group>perf</group>
		</groups>
		<impls>
			<impl>openj9</impl>
		</impls>
		<subsets>
			<subset>SE80</subset>
			<subset>SE90</subset>
			<subset>SE110</subset>
		</subsets>
	</test>
</playlist>
